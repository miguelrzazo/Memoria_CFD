     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solver          fluid;

startFrom       startTime;

startTime       0;

stopAt          endTime;

// Tiempo adimensional: t* = t * a_L / L
// a_L = sqrt(1.4 * 100000 / 1.0) = 374.17 m/s, L = 10 m
// t* = 0.15 -> t = 0.00401 s; t* = 0.25 -> t = 0.00668 s
endTime         0.007;

// Time step increased to make temporal scheme differences visible
// Courant ~ 0.4 for shock speed ~500 m/s and dx = 0.01 m
deltaT          1e-5;

writeControl    runTime;

writeInterval   0.0005;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

// ************************************************************************* //
